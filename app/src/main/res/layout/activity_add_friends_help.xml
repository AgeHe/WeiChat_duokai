<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bac">
    <FrameLayout
        android:id="@+id/m_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="3dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_large"
            android:text="社交APP加粉使用帮助"
            android:textStyle="bold"
            />
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="?actionBarSize"
            android:layout_height="?actionBarSize"
            android:scaleType="center"
            android:layout_gravity="left"
            android:background="?android:attr/selectableItemBackground"
            android:src="@mipmap/icon_back"
            />
    </FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/m_toolbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/text_normal"
                android:paddingBottom="@dimen/text_normal"
                android:paddingLeft="@dimen/layout_tiny"
                android:textSize="@dimen/text_normal"
                android:textColor="@color/theme_red"
                android:textStyle="bold"
                android:text="注:付费后请勿卸载本应用"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/layout_tiny"
                android:paddingBottom="@dimen/layout_tiny"
                android:paddingLeft="@dimen/layout_tiny"
                android:textSize="@dimen/text_mid"
                android:background="@color/bg_fafafa"
                android:textColor="@color/text_dark_grey"
                android:text="@string/wx_addf_help1_title"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_D9D9D9"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/layout_tiny"
                android:paddingBottom="@dimen/layout_tiny"
                android:paddingLeft="@dimen/layout_tiny"
                android:paddingRight="@dimen/layout_tiny"
                android:background="@color/theme_bac"
                android:textSize="@dimen/text_normal"
                android:textColor="@color/text_dark_grey"
                android:text="@string/wx_addf_help1_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/layout_tiny"
                android:paddingBottom="@dimen/layout_tiny"
                android:paddingLeft="@dimen/layout_tiny"
                android:textSize="@dimen/text_mid"
                android:background="@color/bg_fafafa"
                android:textColor="@color/text_dark_grey"
                android:text="@string/wx_addf_help2_title"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_D9D9D9"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/layout_tiny"
                android:paddingBottom="@dimen/layout_tiny"
                android:paddingLeft="@dimen/layout_tiny"
                android:paddingRight="@dimen/layout_tiny"
                android:background="@color/theme_bac"
                android:textSize="@dimen/text_normal"
                android:textColor="@color/text_dark_grey"
                android:text="@string/wx_addf_help2_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/layout_tiny"
                android:paddingBottom="@dimen/layout_tiny"
                android:paddingLeft="@dimen/layout_tiny"
                android:textSize="@dimen/text_mid"
                android:background="@color/bg_fafafa"
                android:textColor="@color/text_dark_grey"
                android:text="@string/wx_addf_help3_title"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_D9D9D9"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/layout_tiny"
                android:paddingBottom="@dimen/layout_tiny"
                android:paddingLeft="@dimen/layout_tiny"
                android:paddingRight="@dimen/layout_tiny"
                android:background="@color/theme_bac"
                android:textSize="@dimen/text_normal"
                android:textColor="@color/text_dark_grey"
                android:text="@string/wx_addf_help3_content"/>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>