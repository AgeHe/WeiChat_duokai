<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:background="@drawable/shape_bg_fillet">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#3e3e3e"
            android:text="@string/wx_addf_qy_dialog_title"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_D9D9D9"/>
        <TextView
            android:id="@+id/tv_select_10"
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#4d3d3d"
            android:text="10人"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_D9D9D9"/>
        <TextView
            android:id="@+id/tv_select_50"
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#4d3d3d"
            android:text="50人"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_D9D9D9"/>
        <TextView
            android:id="@+id/tv_select_100"
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#4d3d3d"
            android:text="100人"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_D9D9D9"/>
        <TextView
            android:id="@+id/tv_select_200"
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#4d3d3d"
            android:text="200人"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/line_D9D9D9"/>
    </LinearLayout>



</FrameLayout>