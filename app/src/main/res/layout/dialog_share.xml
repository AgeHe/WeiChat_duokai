<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_circles_white_bac"
        android:layout_alignParentTop="true"
        >
        <RelativeLayout
                        android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:id="@+id/dialog_title"
            >
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/text_large"
                android:textColor="@color/text_color"
                android:text="分享好友"/>
            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="?actionBarSize"
                android:layout_height="?actionBarSize"
                android:scaleType="center"
                android:src="@mipmap/dialog_close"
                android:layout_alignParentRight="true"
                android:background="?android:attr/selectableItemBackground"
                />
        </RelativeLayout>

        <!--android:src="@drawable/ewm"-->
        <ImageView
            android:id="@+id/image"
            android:layout_height="200dp"
            android:layout_width="200dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/dialog_title"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/et_apk_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textSize="@dimen/text_mid"
            android:text="扫一扫更方便\n分享一次，支付后有50%概率免单。"
            android:textColor="@color/theme_red"
            android:background="@null"
            android:gravity="center"
            android:layout_below="@+id/image"
            android:layout_alignLeft="@+id/line"
            android:layout_alignStart="@+id/line"
            android:visibility="gone"/>
        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/et_apk_name"
            android:layout_marginTop="10dp"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/text_mid"
                android:text="分享链接："
                android:textColor="@color/text_color"
                android:background="@null"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/share_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:textSize="@dimen/text_mid"
                android:text="@string/share_url"
                android:textColor="@color/share_url_blue"
                android:background="@null"
                android:gravity="center"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/layout"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/share_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_mid"
                    android:textColor="@color/text_white"
                    android:gravity="center"
                    android:background="@drawable/main_make_button_shape"
                    android:text="立即分享"
                    android:padding="7dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    />
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>