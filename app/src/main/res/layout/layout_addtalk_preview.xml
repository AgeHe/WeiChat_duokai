<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/add_talk_preview_title_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#393A3F">


        <ImageView
            android:id="@+id/add_talk_preview_title_iv"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:src="@mipmap/abc_ic_ab_back_mtrl_am_alpha"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/viewbg"
            android:layout_toRightOf="@id/add_talk_preview_title_iv"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/add_talk_preview_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test name"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/add_talk_preview_title_iv"/>

        <ImageView
            android:id="@+id/wxtalk_preview_friend_tag"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_toolbar_user_24dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/add_talk_preview_voice_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:paddingBottom="5dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#d8d8d8"/>


        <ImageView
            android:id="@+id/addtalk_preview_voice_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/icon_voices"
            android:layout_alignTop="@+id/addtalk_preview_add_iv"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>


        <ImageView
            android:id="@+id/addtalk_preview_add_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/icon_add"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>



        <ImageView
            android:id="@+id/addtalk_preview_face_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/icon_haha"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/addtalk_preview_add_iv"
            android:layout_marginRight="10dp"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#d8d8d8"
            android:layout_alignBottom="@id/addtalk_preview_voice_iv"
            android:layout_toRightOf="@id/addtalk_preview_voice_iv"
            android:layout_toLeftOf="@id/addtalk_preview_face_iv"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/list_bg_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/add_talk_preview_voice_layout"
        android:layout_below="@id/add_talk_preview_title_layout"/>
    <ListView
        android:id="@+id/add_talk_preview_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/add_talk_preview_voice_layout"
        android:layout_below="@id/add_talk_preview_title_layout"
        android:divider="@null"
        android:background="@null"></ListView>





</RelativeLayout>
