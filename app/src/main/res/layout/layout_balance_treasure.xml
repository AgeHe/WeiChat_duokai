<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_title"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/balance_treasure_title_iv"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:src="@mipmap/abc_ic_ab_back_mtrl_am_alpha"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/balance"
            android:textColor="@color/color_white"
            android:textSize="18sp"/>

    </LinearLayout>

    <EditText
        android:id="@+id/balance_treasure_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_white"
        android:hint="@string/balance_money_hint"
        android:textSize="15sp"
        android:inputType="number|numberDecimal"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/ashbg"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:id="@+id/balance_treasure_percentage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/color_white"
        android:hint="@string/balance_nhsy_hint"
        android:textSize="15sp"
        android:inputType="number|numberDecimal"/>

    <RelativeLayout
        android:id="@+id/balance_treasure_tag_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/color_white"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kqzjeyc"
            android:textColor="@color/color_txtblack"
            android:textSize="15sp"
            android:layout_centerVertical="true"/>


        <ImageView
            android:id="@+id/balance_treasure_tag_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/webviewtab_back_normal"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <Button
        android:id="@+id/balance_treasure_preview_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/green_shape"
        android:text="生成预览"
        android:textColor="@color/color_white"/>


</LinearLayout>
