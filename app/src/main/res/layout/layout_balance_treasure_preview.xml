<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg">

    <RelativeLayout
        android:id="@+id/balance_treasure_preview_head_layout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#F46E25"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/balance_treasure_preview_title_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/balance_treasure_preview_title_iv"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:src="@mipmap/abc_ic_ab_back_mtrl_am_alpha"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/ashbg"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_toRightOf="@id/balance_treasure_preview_title_iv"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yeb"
                android:textColor="@color/color_white"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:layout_toRightOf="@id/balance_treasure_preview_title_iv"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_alipay_menu"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/alipay_yeb_help_new"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="60dp"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/balance_treasure_preview_sytag_yv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zrsy"
            android:textColor="@color/color_white"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/balance_treasure_preview_title_layout"/>
        <TextView
            android:id="@+id/balance_treasure_preview_symoney_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.06"
            android:textColor="@color/color_white"
            android:textSize="50sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/balance_treasure_preview_sytag_yv"
            android:lines="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:background="#F2643C">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="7dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yeb_all_money"
                    android:textColor="@color/color_white"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/balance_treasure_preview_allmoney_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="222.00"
                    android:textColor="@color/color_white"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"
                    android:lines="1"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="7dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zfb_qrnh"
                    android:textColor="@color/color_white"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/balance_treasure_preview_percentage_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1222.00"
                    android:textColor="@color/color_white"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"
                    android:lines="1"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/balance_treasure_preview_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/color_white"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/zfb_zhuanchu"
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/zfb_zhuanru"
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:gravity="center"/>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/balance_treasure_preview_head_layout"
        android:layout_above="@id/balance_treasure_preview_btn_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/color_white"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/alipay_yeb_zjgl"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/zfb_yeb_zjgl"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/ashbg"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/color_white"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/balance_shape"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zfb_yeb_gzzr"
                    android:textColor="@color/color_txtblack"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zfb_yeb_gzzr_des"
                android:textColor="@color/color_txtash"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/ashbg"
            android:layout_marginLeft="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/color_white"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/balance_shape"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zfb_yeb_myhd"
                android:textColor="@color/color_txtblack"
                android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zfb_yeb_myhd_des"
                android:textColor="@color/color_txtash"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/ashbg"
            android:layout_marginLeft="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/color_white"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/balance_shape"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zfb_yeb_yebzdzr"
                android:textColor="@color/color_txtblack"
                android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zfb_yeb_yebzdzr_des"
                android:textColor="@color/color_txtash"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"/>
        </LinearLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/color_white"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zfb_yeb_kqzjjyc"
                android:textSize="15sp"
                android:textColor="@color/color_txtblack"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/balance_treasure_preview_select_iv"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@mipmap/alipay_switch_off"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/ashbg"/>
    </LinearLayout>


</RelativeLayout>
