<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/btn_white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/dialog_comment_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="评论"
                android:textColor="#000000"
                android:textSize="18sp"
                android:gravity="center"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:background="@color/txtash"/>
            <TextView
                android:id="@+id/dialog_reply_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="回复"
                android:textColor="#000000"
                android:textSize="18sp"
                android:gravity="center"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c9c9c9"/>

        <LinearLayout
            android:id="@+id/comment_context_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:visibility="visible">

            <EditText
                android:id="@+id/comment_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="昵称"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:lines="1"
                android:background="@null"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/txtash"/>

            <EditText
                android:id="@+id/comment_context"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="内容"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_marginTop="5dp"
                android:background="@null"/>/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/reply_context_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:visibility="gone">

            <EditText
                android:id="@+id/reply_name_from"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="昵称"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:background="@null"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/txtash"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="回复"
                android:background="@color/white"
                android:gravity="center" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/txtash"/>
            <EditText
                android:id="@+id/reply_name_to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="昵称"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:background="@null"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/txtash"/>
            <EditText
                android:id="@+id/reply_context"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="内容"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:background="@null"/>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/txtash"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/dialog_cancle_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="取消"
                android:textColor="#000000"
                android:textSize="18sp"
                android:gravity="center"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"/>
            <TextView
                android:id="@+id/dialog_sure_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="确认"
                android:textColor="#000000"
                android:textSize="18sp"
                android:gravity="center"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
