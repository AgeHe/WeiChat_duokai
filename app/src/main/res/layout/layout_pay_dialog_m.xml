<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/dialog_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/dialog_circles_white_bac"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/dialog_apkname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pay_dialog_pay"
            android:textColor="@color/text_color"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"/>

          <RadioGroup
              android:id="@+id/radiogroup"
              android:layout_height="wrap_content"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              >
             <RadioButton
                 android:id="@+id/dc"
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:text="8.8元/单次制作"
                 android:background="@drawable/dialog_radiobtn"
                 android:textAlignment="center"
                 android:padding="10dp"
                 android:textColor="@drawable/dialog_textcolor"
                 android:button="@null"
                 />
              <RadioButton
                  android:id="@+id/zs"
                  android:layout_height="wrap_content"
                  android:layout_width="match_parent"
                  android:text="30元/终身制作"
                  android:checked="true"
                  android:layout_marginTop="10dp"
                  android:background="@drawable/dialog_radiobtn"
                  android:textColor="@drawable/dialog_textcolor"
                  android:textAlignment="center"
                  android:padding="10dp"
                  android:button="@null"
                  />
              <RadioButton
                  android:id="@+id/all"
                  android:layout_height="wrap_content"
                  android:layout_width="match_parent"
                  android:text="30元/开通全部功能"
                  android:layout_marginTop="10dp"
                  android:background="@drawable/dialog_radiobtn"
                  android:textColor="@drawable/dialog_textcolor"
                  android:textAlignment="center"
                  android:padding="10dp"
                  android:button="@null"
                  android:visibility="gone"
                  />


          </RadioGroup>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pay_dialog_paytype"
            android:textColor="@color/text_color"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"/>
        <LinearLayout
            android:id="@+id/dialog_zfb_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_horizontal"
            android:background="@drawable/zfbpaybtn_update_download"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/zfb"
                android:layout_marginRight="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝支付"
                android:textSize="13sp"
                android:textColor="@color/text_white"
                android:layout_gravity="center_vertical"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_wx_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_horizontal"
            android:background="@drawable/wxpaybtn_update_download"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/wx"
                android:layout_marginRight="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信支付"
                android:textSize="13sp"
                android:textColor="@color/text_white"
                android:layout_gravity="center_vertical"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/dialog_layout_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/dialog_close"
        android:layout_alignTop="@id/dialog_layout"
        android:layout_alignRight="@id/dialog_layout"/>
</RelativeLayout>
