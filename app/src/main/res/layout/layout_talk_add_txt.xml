<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ebebeb">

    <RelativeLayout
        android:id="@+id/add_picture_title_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#393A3F">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tjwbxx"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/add_picture_title_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_back"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="20dp">

        <include
            android:id="@+id/multi_talk_txt_send_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/layout_multi_talk_select_public"/>
        <LinearLayout
            android:id="@+id/single_talk_txt_send_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/addtxt_sendtype_m"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tjwbxx_zjfs"
                android:background="@drawable/blue_shape"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:gravity="center"
                android:layout_marginRight="20dp"/>
            <TextView
                android:id="@+id/addtxt_sendtype_h"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tjwbxx_dffs"
                android:background="@drawable/white_shape"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:gravity="center"/>

        </LinearLayout>

        <EditText
            android:id="@+id/addtxt_time_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/white_shape"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:hint="@string/tjwbxx_time_hint"
            android:paddingLeft="10dp"
            android:textSize="17sp"
            android:textColorHint="#696969"/>

        <EditText
            android:id="@+id/addtxt_context_et"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/white_shape"
            android:layout_marginTop="20dp"
            android:gravity="start"
            android:padding="10dp"
            android:hint="@string/tjwbxx_context_hint"
            android:textSize="17sp"
            android:textColor="#000000"/>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/addtalk_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginTop="15dp"
            android:visibility="visible"/>

        <Button
            android:id="@+id/addtxt_sure_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/green_shape"
            android:layout_marginTop="20dp"
            android:text="@string/tjwbxx_sure"
            android:textSize="20sp"
            android:textColor="#ffffff"/>

    </LinearLayout>


</LinearLayout>
