<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ebebeb">

    <RelativeLayout
        android:id="@+id/add_photo_title_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#393A3F">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tjyyxx"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/add_voice_title_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_back"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="20dp">

        <include
            android:id="@+id/multi_talk_voice_send_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/layout_multi_talk_select_public"/>

        <LinearLayout
            android:id="@+id/single_talk_voice_send_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/add_voice_sendtype_m"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tjyyxx_zjfs"
                android:background="@drawable/blue_shape"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:gravity="center"
                android:layout_marginRight="20dp"/>
            <TextView
                android:id="@+id/add_voice_sendtype_h"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tjyyxx_dfss"
                android:background="@drawable/white_shape"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:gravity="center"/>

        </LinearLayout>

        <EditText
            android:id="@+id/add_voice_time_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/white_shape"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:hint="@string/tjyyxx_time_hint"
            android:paddingLeft="10dp"
            android:textSize="17sp"
            android:textColorHint="#696969"/>
        <EditText
            android:id="@+id/add_voice_length"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/white_shape"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:hint="@string/tjyyxx_vlenght_60"
            android:paddingLeft="10dp"
            android:textSize="17sp"
            android:textColorHint="#696969"
            android:inputType="number"/>

        <LinearLayout
            android:id="@+id/add_voice_listentype_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <ImageView
                android:id="@+id/add_voice_listentype_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/webviewtab_back_disable"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/add_voice_listentype_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tjyyxx_yst"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:textColor="#000000"
                android:textSize="15sp"/>

        </LinearLayout>
        <Button
            android:id="@+id/add_voice_sure_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/green_shape"
            android:layout_marginTop="20dp"
            android:text="@string/tjyyxx_sure"
            android:textSize="20sp"
            android:textColor="#ffffff"/>

    </LinearLayout>


</LinearLayout>
