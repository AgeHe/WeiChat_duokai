<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_bg">

    <LinearLayout
        android:id="@+id/wx_voice_title_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/color_title">
        <ImageView
            android:id="@+id/wx_voice_title_iv"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@mipmap/abc_ic_ab_back_mtrl_am_alpha"
            android:paddingLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wxyylt"
            android:textSize="18sp"
            android:textColor="@color/color_white"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/color_white"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wxyylt_thzt"
            android:textColor="@color/color_txtblack"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/wx_voice_type_calling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/white_shape"
            android:text="@string/wxyylt_thzt_thz"
            android:textSize="13sp"
            android:textColor="@color/wxblue"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/wx_voice_type_nocall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_shape"
            android:text="@string/wxyylt_thzt_djt"
            android:textSize="13sp"
            android:textColor="@color/color_white"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/wx_voice_type_calling"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/wx_voice_norcall_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:visibility="visible">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/wxyylt_thdx"
            android:textColor="@color/color_txtblack"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/wx_voice_callname_right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:id="@+id/wx_voice_norcall_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher"
            android:layout_toLeftOf="@id/wx_voice_callname_right"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/wx_voice_norcall_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/wxyylt_xzjs"
            android:textColor="@color/txtash"
            android:textSize="15sp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/wx_voice_norcall_icon"/>

    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/wx_voice_calling_time_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_marginTop="10dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/wxyylt_thsj"
                android:textColor="@color/color_txtblack"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:id="@+id/wx_voice_calling_time_right"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/wx_voice_calling_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wxyylt_thzt_30_30"
                android:textSize="13sp"
                android:textColor="@color/color_txtash"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/wx_voice_calling_time_right"
                android:layout_marginRight="10dp"/>

        </RelativeLayout>

    <Button
        android:id="@+id/wx_voice_preview_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/green_shape"
        android:text="@string/wxyylt_thzt_preview"
        android:textColor="@color/color_white"
        android:textSize="15sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"/>


</LinearLayout>
