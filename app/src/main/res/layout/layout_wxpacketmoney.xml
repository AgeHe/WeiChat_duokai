<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/color_title"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/wxmoneypacket"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@mipmap/abc_ic_ab_back_mtrl_am_alpha"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weixinlingqian"
            android:textSize="18sp"
            android:textColor="@color/color_white"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>


    <EditText
        android:id="@+id/moneypacket_et"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="@string/weixinlingqian_money_hint"
        android:background="@color/color_white"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:focusableInTouchMode="false"
        android:inputType="number"
        android:textColor="@color/color_black"
        android:textColorHint="@color/txtash"/>

    <RelativeLayout
        android:id="@+id/rule_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_white"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weixinlingqian_txsfgz"
            android:textSize="13sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"/>

        <ImageView
            android:id="@+id/rule_layout_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/webviewtab_back_normal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>


    <Button
        android:id="@+id/pocketmoney_preview_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/weixinlingqian_preview"
        android:textColor="#ffffff"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="@color/color_green"/>

</LinearLayout>
