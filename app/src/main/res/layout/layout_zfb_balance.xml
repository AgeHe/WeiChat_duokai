<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_title"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/zfb_balance_title_iv"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@mipmap/abc_ic_ab_back_mtrl_am_alpha"
            android:paddingLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/zfbye"
            android:textColor="@color/color_white"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"/>

    </LinearLayout>


    <EditText
        android:id="@+id/zfb_balance_money_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:padding="10dp"
        android:hint="@string/zfbye_money_hint"
        android:layout_marginTop="10dp"
        android:inputType="number|numberDecimal"/>

    <Button
        android:id="@+id/zfb_balance_preview_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/green_shape"
        android:text="@string/zfbye_preview"
        android:textColor="@color/color_white"
        android:layout_margin="20dp"/>
</LinearLayout>
