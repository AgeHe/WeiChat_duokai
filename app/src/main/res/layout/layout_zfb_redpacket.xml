<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_title">

        <ImageView
            android:id="@+id/zfb_redpacket_title_iv"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@mipmap/abc_ic_ab_back_mtrl_am_alpha"
            android:paddingLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zfbhb"
            android:textColor="@color/color_white"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/zfb_redpacket_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zfbhb_fsr"
            android:layout_marginLeft="10dp"
            android:textColor="@color/color_txtblack"
            android:textSize="15sp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:id="@+id/zfb_redpacket_info_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"
            android:src="@mipmap/role_000"/>
        <TextView
            android:id="@+id/zfb_redpacket_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/qqhb_qxz"
            android:textColor="@color/color_txtash"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/zfb_redpacket_info_icon"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <EditText
        android:id="@+id/zfb_redpacket_money_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:background="@color/color_white"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:hint="@string/zfbhb_money_hint"
        android:inputType="number|numberDecimal"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:background="@color/color_txtash"/>

    <EditText
        android:id="@+id/zfb_redpacket_des_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:background="@color/color_white"
        android:paddingLeft="10dp"
        android:hint="@string/zfbhb_gxfc"/>

    <Button
        android:id="@+id/zfb_redpacket_preview_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/zfbhb_preview"
        android:background="@drawable/green_shape"
        android:textColor="@color/color_white"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

</LinearLayout>
