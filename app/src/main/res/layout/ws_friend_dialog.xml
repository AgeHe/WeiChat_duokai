<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/txtblack">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <android.support.v4.view.ViewPager
            android:id="@+id/vp_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"/>
        <com.afollestad.easyvideoplayer.EasyVideoPlayer
            android:id="@+id/evp_player"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            app:evp_autoPlay="true"
            app:evp_disableControls="false"
            app:evp_hideControlsOnPlay="true"
            android:layout_centerInParent="true"
            app:evp_autoFullscreen="false"
            app:evp_playDrawable="@mipmap/gdt_ic_play"
            app:evp_loop="false"
            android:clickable="false"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="25dp">
        <!--#454545-->
        <LinearLayout
            android:id="@+id/ll_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </LinearLayout>

        <View
            android:id="@+id/v_redpoint"
            android:layout_width="10dip"
            android:layout_height="10dip"
            android:background="@drawable/ws_friend_oval" />
    </RelativeLayout>


</LinearLayout>